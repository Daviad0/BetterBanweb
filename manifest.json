{
    "manifest_version": 2,
    "name": "Better Banweb",
    "version": "0.1",
  
    "description": "Makes the Banweb application for Michigan Tech students just... better!",
  
    "icons": {
        "48": "BetterBanweb.png"
    },
  
    "permissions": ["activeTab"],

    "browser_action": {
        "default_icon": "resources/images/testicon.png",
        "default_title": "Better Banweb",
        "default_popup": "popup/home.html"
    },
    "web_accessible_resources": [
        "popup/home.css",
        "resources/fonts/Lato-Regular.ttf"
    ],
    "content_scripts": [
      {
        "matches": ["*://banweb.mtu.edu/*", "*://www.banweb.mtu.edu/*"],
        "js": ["main.js"]
      },
        {
        "matches": ["*://*.sso.mtu.edu/*"],
         "js": ["SSOLogin.js"]
      }
    ]
  }
  
